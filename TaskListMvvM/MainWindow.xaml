<Window x:Class="TaskListMvvM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskListMvvM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <ListBox HorizontalAlignment="Stretch" 
                     ItemsSource="{Binding Tasks}"
                     SelectedItem="{Binding SelectedItem}"/>
            <TextBox Grid.Row="1" 
                     TextAlignment="Left" 
                     VerticalAlignment="Stretch" 
                     VerticalContentAlignment="Center" 
                     Text="{Binding Description}"/>
            <UniformGrid Grid.Row="2" Rows="1">
                <Button Content="Add Task" Command="{Binding AddCommand}"/>
                <Button Content="Change Task Status" Command="{Binding UpdateCommand}"/>
                <Button Content="Change Task Description" Command="{Binding ChangeDescriptionCommand}"/>
                <Button Content="Delete Task" Command="{Binding DeleteCommand}"/>
                <Button Content="Clear" Command="{Binding ClearCommand}"/>
            </UniformGrid>
        </Grid>
</Window>
