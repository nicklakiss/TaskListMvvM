<Window x:Class="TaskListMvvM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskListMvvM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None" Style="{StaticResource Window.Style}" AllowsTransparency="True">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.07*"/>
                <RowDefinition/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1" Style="{StaticResource StackPanel.Style}">
             <Button x:Name="ButtonHide" Content="➖" Width="25" Height="25" Style="{StaticResource Button.Style}"/>
             <Button x:Name="ButtonClose" Content="✖️" Width="25" Height="25" Style="{StaticResource Button.Style}"/>
        </StackPanel>
        <UniformGrid Grid.ColumnSpan="1" Rows="1">
             <Button Content="Add" Command="{Binding AddCommand}" Style="{StaticResource Button.Style}"/>
             <Button Content="Update Status" Command="{Binding UpdateCommand}" Style="{StaticResource Button.Style}"/>
             <Button Content="Rename" Command="{Binding ChangeDescriptionCommand}" Style="{StaticResource Button.Style}"/>
             <Button Content="Delete" Command="{Binding DeleteCommand}" Style="{StaticResource Button.Style}"/>
             <Button Content="Clear" Command="{Binding ClearCommand}" Style="{StaticResource Button.Style}"/>
        </UniformGrid>
            <ListBox HorizontalAlignment="Stretch" 
                     ItemsSource="{Binding Tasks}"
                     SelectedItem="{Binding SelectedItem}"
                     ItemTemplate="{StaticResource TaskItem.Template}"
                     Style="{StaticResource Listbox.Style}"
                     Grid.Row="1"
                     Grid.ColumnSpan="2"/>
            <TextBox Grid.Row="2" 
                     TextAlignment="Left" 
                     VerticalAlignment="Stretch" 
                     VerticalContentAlignment="Center" 
                     Text="{Binding Description}"
                     Style="{StaticResource TextBox.Style}"
                     Grid.ColumnSpan="2"/>

        </Grid>
</Window>
